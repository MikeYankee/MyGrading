{% extends '::base.html.twig' %}

{% block body %}
    <div id="main">
        {% include '::menu.html.twig' %}
        <div class="content_text">
            <div class="container">
                <h3>Historique des feuilles de présence</h3><br>
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Date</th>
                        <th>Feuille de présence</th>
                        <th>Télécharger</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if(lesEts|length > 0) %}
                        {% for ets in lesEts %}
                            <tr>
                                <td>{{ ets.date|date('d/m/Y') }}</td>
                                <td><a href="#" target="_blank">Voir la feuille de présence {{ ets.id }}</a></td>
                                <td><a href="#"><i class="glyphicon glyphicon-download-alt"></i></a></td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr><td colspan="5">Aucune ets n'est encore affilié à la promotion.</td></tr>
                    {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}