{% extends '::base.html.twig' %}

{% block body %}

    <div id="main">

        {% include '::menu.html.twig' %}
        {{ form_start(form) }}
        {{ form_errors(form) }}

        <div class="content_text">
            <div class="container">
                <h3>Ajout d'une promotion</h3><br>

                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label class="control-label">{{ form_label(form.libelle) }}</label>
                            <div class="has-feedback">
                                {{ form_widget(form.libelle, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label class="control-label">{{ form_label(form.lesResponsables) }}</label>
                            <div class="has-feedback">
                                {{ form_widget(form.lesResponsables, { 'attr': {'class': 'form-control'}, 'id': 'responsable'}) }}
                            </div>
                        </div>
                    </div>
                </div>

                <br><br><br><br>

                <div class="pull-right">
                    <a href="{{ path('liste_promotions') }}" class="btn btn-default">Annuler</a>
                    <button type="submit" class="btn btn-success">Enregistrer</button>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}