{% extends '::base.html.twig' %}

{% block body %}
    <div id="main">
        {% include '::menu.html.twig' %}
        <div class="content_text">
            <div class="container">
                <h3>Ajout d'un utilisateur</h3><br>

                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label class="control-label">Nom : </label>
                            <div class="has-feedback">
                                <input type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Mail : </label>
                            <div class="has-feedback">
                                <input type="text" class="form-control">
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label class="control-label">Prénom : </label>
                            <div class="has-feedback">
                                <input type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Statut : </label>
                            <div class="has-feedback">
                                <input type="checkbox" data-toggle="toggle" data-on="Délégué" data-off="Etudiant" data-onstyle="success" data-offstyle="danger">
                            </div>
                        </div>
                    </div>
                </div>

                <br><br><br><br><br><br>

                <div class="pull-right">
                    <a href="{{ path('gerer_promotion') }}" class="btn btn-default">Annuler</a>
                    <button type="submit" class="btn btn-success">Enregistrer</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
    <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
{% endblock %}